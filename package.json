{
  "name": "personalq",
  "version": "1.0.0",
  "private": true,
  "main": "public/electron.js",
  "dependencies": {
    "axios": "^0.27.2",
    "concurrently": "^7.3.0",
    "dotenv": "^16.0.1",
    "electron-is-dev": "^2.0.0",
    "electron-store": "^8.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.4.0",
    "react-scripts": "5.0.1",
    "wait-on": "^6.0.1"
  },
  "scripts": {
    "start": "export NODE_OPTIONS=--openssl-legacy-provider && react-scripts start",
    "build": "export NODE_OPTIONS=--openssl-legacy-provider && react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron:start": "electron .",
    "electron:dev": "export NODE_OPTIONS=--openssl-legacy-provider && concurrently \"npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "export NODE_OPTIONS=--openssl-legacy-provider && npm run build && electron-builder",
    "win:start": "set NODE_OPTIONS=--openssl-legacy-provider && react-scripts start",
    "win:build": "set NODE_OPTIONS=--openssl-legacy-provider && react-scripts build",
    "win:electron:dev": "set NODE_OPTIONS=--openssl-legacy-provider && concurrently \"npm run win:start\" \"wait-on http://localhost:3000 && electron .\"",
    "win:electron:build": "set NODE_OPTIONS=--openssl-legacy-provider && npm run win:build && electron-builder"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "electron": "^20.0.1",
    "electron-builder": "^23.3.3"
  },
  "build": {
    "appId": "com.personalq.app",
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "public/electron.js",
      "public/preload.js",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    }
  }
}